<%- include ("partials/header.ejs") %> 
<body>
    <%- include ("partials/navbar.ejs") %> 
    <div class="container">
        <h1><%= pergunta.titulo %> </h1>
        <p><%= pergunta.descricao %> </p>
        <hr>
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <textarea name="corpo" cols="30" rows="10" class="form-control" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h4>Respostas anteriores:</h4>
        <hr>
        <% respostas.forEach((resposta) => {%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %> </p>
                    </div>
                </div>
            <%}) %> 
    </div>
</body>
<%- include ("partials/footer.ejs") %> 
<!-- finalizado -->